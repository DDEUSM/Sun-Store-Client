{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ES2020"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",    
    "resolveJsonModule": true,
    "isolatedModules": true,        
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["dist", "lib"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
